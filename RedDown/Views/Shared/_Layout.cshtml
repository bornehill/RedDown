<!DOCTYPE html>
<html>
<head>
    <title>Red Down site @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar">
        <header class="container">
            <div class="navbar-header">
                <div class="navbar-brand navbar-inverse bg-primary h1">
                    Sindrome
                </div>
                <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">&#9776</button>
            </div>
            <div id="menu" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-controller="App" asp-action="Registry">Registro</a>
                    </li>
                </ul>
            </div>
        </header>
    </div>
    <section class="container">
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </section>
    <footer class="container">
        <div class="text-center text-warning">Copyright 2018 GirasolWeb</div>
    </footer>

    <script src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>